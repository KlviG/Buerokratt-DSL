{
  "action_type": "BLOGIC",
  "destination": [
    {
      "reflect_input": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{dmapper_url}/hbs/backoffice/reflect_feedback",
          "post_body_struct": {
            "chatId": "{#.chatId}",
            "feedback": "{#.feedbackText}"
          }
        },
        "response": {
          "ok": "proceed",
          "nok": "stop"
        }
      }
    },
    {
      "chat_info": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "proceed"
          }
        },
        "proceed": {
          "cookies": [
            "chatJwt"
          ],
          "method": "post",
          "endpoint": "{tim_url}/jwt/custom-jwt-userinfo",
          "post_body_struct": "chatJwt",
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "response": {
          "ok": "proceed",
          "nok": "stop"
        }
      }
    },
    {
      "forwarding_validation": {
        "verify": {
          "verification_endpoint": {
            "method": "post",
            "endpoint": "{ruuter_url}/param_string_length",
            "post_body_struct": {
              "input": "{#.chat_info#.forwardTo}",
              "min": 1,
              "max": 300
            }
          },
          "response": {
            "ok": "external_request",
            "nok": "local_request"
          }
        },
        "local_request": {
          "method": "post",
          "endpoint": "{resql_url}/backoffice/update-chat-with-feedback-text",
          "post_body_parameters": {
            "validate_text_length": {
              "method": "post",
              "endpoint": "{ruuter_url}/param_string_length",
              "post_body_struct": {
                "input": "{#.reflect_input#.feedback}",
                "min": 1,
                "max": 500
              },
              "response": {
                "ok": "proceed",
                "nok": "stop"
              }
            }
          },
          "post_body_struct": {
            "id": "{#.reflect_input#.chatId}",
            "created": "$_getInstant()",
            "feedbackText": "{#.reflect_input#.feedback}"
          }
        },
        "external_request": {
          "method": "post",
          "endpoint": "{dmapper_url}/hbs/backoffice/reflect_data_arr",
          "post_body_parameters": {
            "data": {
              "method": "post",
              "cookies": {
                "redirectJwt": "chatJwt"
              },
              "endpoint": "https://{#.chat_info#.forwardTo}/post-chat-feedback-text",
              "post_body_struct": {
                "chatId": "{#.reflect_input#.chatId}",
                "feedbackText": "{#.reflect_input#.feedback}"
              },
              "response": {
                "ok": "proceed",
                "nok": "stop"
              }
            }
          },
          "post_body_struct": {
            "data": "{$.data$.data$.forwarding_validation}"
          },
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        }
      }
    }
  ]
}
