{
  "action_type": "BLOGIC",
  "destination": [
    {
      "create_intent": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{ruuter_url}/functions/createIntent",
          "post_body_parameters": {
            "check_roles": {
              "method": "post",
              "endpoint": "{ruuter_url}/match_input",
              "post_body_parameters": {
                "userinfo": {
                  "cookies": [
                    "customJwtCookie"
                  ],
                  "method": "post",
                  "endpoint": "{tim_url}/jwt/custom-jwt-userinfo",
                  "post_body_struct": "customJwtCookie",
                  "response": {
                    "ok": "proceed",
                    "nok": "stop"
                  }
                }
              },
              "post_body_struct": {
                "input": {
                  "authorities": "{$.userinfo$.authorities}"
                },
                "validate_against": {
                  "authorities": [
                    "ROLE_ADMINISTRATOR",
                    "ROLE_CHATBOT_TRAINER"
                  ]
                },
                "validation_type": "MUST_MATCH_ANY"
              },
              "response": {
                "ok": "proceed",
                "nok": "stop"
              }
            }
          },
          "post_body_struct": {
            "username": "{training_user}",
            "prvKey": "{training_prv_key}",
            "host": "{training_url}",
            "botDirectory": "{training_bot_directory_name}",
            "name": "{#.intent#.name}",
            "response": "{#.intent#.response}",
            "examples": "{#.intent#.examples}"
          }
        },
        "response": {
          "ok": "proceed",
          "nok": "stop"
        }
      }
    }
  ]
}
