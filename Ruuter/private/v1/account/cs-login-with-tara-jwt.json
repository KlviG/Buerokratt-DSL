action_type: BLOGIC
destination:
  - get_session_length:
      verify:
        response:
          ok: proceed
          nok: stop
      proceed:
        method: post
        endpoint: "[#CHATBOT_RUUTER]:[#CHATBOT_RUUTER_PORT]/cs-get-session-length"
        post_body_struct: {}
        response:
          ok: proceed
          nok: stop
      response:
        ok: proceed
        nok: stop
  - custom_jwt_cookie:
      verify:
        response:
          ok: proceed
          nok: stop
      proceed:
        method: post
        endpoint: "[#CHATBOT_RESQL]:[#CHATBOT_RESQL_PORT]/jwt/custom-jwt-generate"
        response_header:
          Set-Cookie:
            - "#.from_property": "{#.custom_jwt_cookie#.token}"
              maxAge: 28800
              setSecure: true
              domain: "[#CHATBOT_RESQL]:[#CHATBOT_RESQL_PORT]"
              name: customJwtCookie
            - name: JWTTOKEN
              httpOnly: true
              maxAge: 0
              setSecure: true
              value: null
        post_body_struct:
          JWTName: customJwtCookie
          expirationInMinutes: "{#.get_session_length#.data#.cs_get_session_length[0]#.value}"
          content: "{$.user_with_roles[0]}"
        post_body_parameters:
          user_with_roles:
            method: post
            endpoint: "[#CHATBOT_RESQL]:[#CHATBOT_RESQL_PORT]/backoffice/get-user-with-roles-by-id-code"
            post_body_struct:
              userIdCode: "{$.user_id_code[0]$.userIdCode}"
            post_body_parameters:
              user_id_code:
                method: post
                endpoint: "[#CHATBOT_RESQL]:[#CHATBOT_RESQL_PORT]/backoffice/insert-initial-user-or-return-existing-user-id-code"
                post_body_struct:
                  created: "$_getInstant()"
                  userIdCode: "{$.tara_user_info$.personalCode}"
                  firstName: "{$.tara_user_info$.firstName}"
                  lastName: "{$.tara_user_info$.lastName}"
                  csa_title: "{$.tara_user_info$.firstName}"
                  csa_email: null
                  initialUserRole: ROLE_ADMINISTRATOR
                post_body_parameters:
                  tara_user_info:
                    cookies:
                      - JWTTOKEN
                    method: get
                    endpoint: "[#CHATBOT_RESQL]:[#CHATBOT_RESQL_PORT]/jwt/userinfo"
                    response:
                      ok: proceed
                      nok: stop
                response:
                  ok: proceed
                  nok: stop
        response:
          ok: proceed
          nok: stop
  - blacklist_tara_jwt:
      verify:
        response:
          ok: proceed
          nok: stop
      proceed:
        method: post
        endpoint: "[#CHATBOT_RESQL]:[#CHATBOT_RESQL_PORT]/jwt/blacklist"
        cookies:
          - JWTTOKEN
        post_body_struct: {}
        response:
          ok: proceed
          nok: proceed
